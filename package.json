{
  "name": "language-house-academy",
  "version": "1.0.0",
  "description": "",
  "main": "dist/src/index.js",
  "keywords": [],
  "author": "Muhammed Ibrahem",
  "packageManager": "pnpm@10.13.1",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node dist/src/server.js",
    "dev": "nodemon",
    "test": "cross-env NODE_ENV=test jest --verbose --coverage",
    "lint": "eslint . --ext .ts",
    "prepare": "husky",
    "format": "prettier --write src/**/*.ts",
    "lint-staged": "lint-staged",
    "commitlint": "commitlint"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register src/server.ts",
    "ignore": [
      "node_modules",
      "dist"
    ]
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cloudinary": "^2.7.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "express-winston": "^4.2.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "mysql2": "^3.14.2",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.31.0",
    "@jest/globals": "^30.0.4",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-winston": "^4.0.2",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.0.13",
    "@types/supertest": "^6.0.3",
    "@types/winston": "^2.4.4",
    "cross-env": "^7.0.3",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "jest-module-name-mapper": "^0.1.5",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.1.10",
    "prettier": "3.6.2",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0"
  }
}
